{
  "name": "modempay/modempay-php",
  "description": "Official PHP SDK for ModemPay payment processing. Simple, fast, and framework-agnostic with first-class Laravel support.",
  "type": "library",
  "keywords": [
    "modempay",
    "payment",
    "payments",
    "payment gateway",
    "payment processing",
    "sdk",
    "laravel",
    "php"
  ],
  "homepage": "https://github.com/modempay-inc/modempay-php",
  "license": "MIT",
  "authors": [
    {
      "name": "ModemPay",
      "email": "info@modempay.com",
      "homepage": "https://modempay.com"
    }
  ],
  "support": {
    "issues": "https://github.com/modempay-inc/modempay-php/issues",
    "source": "https://github.com/modempay-inc/modempay-php",
    "docs": "https://docs.modempay.com"
  },
  "require": {
    "php": "^8.1",
    "symfony/http-client": "^6.0|^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "illuminate/support": "^10.0|^11.0"
  },
  "suggest": {
    "illuminate/support": "Required for Laravel integration (^10.0|^11.0)"
  },
  "autoload": {
    "psr-4": {
      "ModemPay\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ModemPay\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "extra": {
    "laravel": {
      "providers": [
        "ModemPay\\Laravel\\ModemPayServiceProvider"
      ],
      "aliases": {
        "ModemPay": "ModemPay\\Laravel\\Facades\\ModemPay"
      }
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
